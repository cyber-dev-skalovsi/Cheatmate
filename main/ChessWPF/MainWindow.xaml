<Window x:Class="SystemHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="svchost"
        Height="600"
        Width="600"
        MinHeight="200"
        MinWidth="200"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Background="Transparent"
        Topmost="True"
        SizeToContent="Height">

    <Border Background="#F0282828"
            CornerRadius="10"
            Padding="10">

        <StackPanel>
            <!-- Chessboard container with proper sizing -->
            <Border>
                <Viewbox Stretch="Uniform">
                    <Grid x:Name="ChessBoard"
                          Width="580"
                          Height="580"
                          Background="#312E2B"/>
                </Viewbox>
            </Border>

            <!-- AI Explanation box -->
            <Border x:Name="ExplanationBorder"
                    Background="#CC000000"
                    BorderBrush="#30FFFFFF"
                    BorderThickness="0,1,0,0"
                    Padding="12,10"
                    Margin="0,5,0,0"
                    Visibility="Collapsed">

                <StackPanel>
                    <TextBlock x:Name="MoveInfoText"
                               Foreground="#FFD700"
                               FontSize="10"
                               FontWeight="SemiBold"
                               Margin="0,0,0,6"
                               TextWrapping="Wrap"/>

                    <TextBlock x:Name="ExplanationText"
                               Foreground="#E0E0E0"
                               FontSize="11"
                               TextWrapping="Wrap"
                               LineHeight="16"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
